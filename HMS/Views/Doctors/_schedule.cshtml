@if (Model.select == true)
{
    <h2>@Model.doctor.FirstName @Model.doctor.LastName</h2>



    using (Html.BeginForm("updateDates","Doctors"))
    {
            @Html.AntiForgeryToken()

            <table id="tblCustomers" style="text-align:center" class="table table-bordered table-hover table-striped" cellpadding="0" cellspacing="0">

                <thead>
                    <tr>

                        <th style="width:100px"><center>Days</center> </th>
                        <th style="width:100px"><center>Availability</center> </th>
                    </tr>

                </thead>

                <tbody>
                    @{
                        var count = 0;
                    }

                    @foreach (var weekday in @Model.weekdays)
                    {
                        ++count;
                        <tr>

                            <td>
                                <label>@weekday.Name</label>
                            </td>

                            <td>
                                @{
                                    var isChecked = "";
                                    if (Model.workdays.Contains(weekday.Name))
                                    {
                                        isChecked = "checked";
                                    }

                                }
                                <input id="inp@(count)" name="days@(count)" type="checkbox" value="@(weekday.Name)" @isChecked class="custom-control-input" />
                            </td>

                        </tr>

                                    }

                    <tr>
                        <td colspan="2">

                            <input type="hidden" name="doctorID" value="@Model.doctor.DoctorID" />
                            <center>
                                <input align="center" type="submit" class="btn btn-primary btn-lg btn-block" id="updateDays" value="Submit" />
                            </center>


                        </td>
                    </tr>
                </tbody>
            </table>
          }

                                        
}
